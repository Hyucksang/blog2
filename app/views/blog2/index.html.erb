<div class="container">
    <form action="/post" method="get">
      <div class="form-group">
        <label for="inputWriter">WRITER</label>
        <input type="text" class="form-control" aria-describedby="emailHelp" name="writer"   placeholder="Enter writer">
      </div>
      <div class="form-group">
        <label for="inputTitle">TITLE</label>
        <input type="text" class="form-control" aria-describedby="emailHelp" name="title"  placeholder="Enter title">
      </div>
      <div class="form-group">
        <label for="inputContent">CONTENT</label>
        <textarea class="form-control" name="content" rows="5"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    
    <div class="container mt-5">
      <ul>
        <% @posts.each do |p| %>
          <li>작성자 : <%= p.writer %></li>
          <li>제목 : <%= p.title %></li>
          <li>내용 : <%= p.content %></li>      
          <form action="/delete" method="get">
            <textarea name="id" style="display:none;"><%=p.id%> </textarea>
            <button type="submit" class="btn btn-primary">Delete</button> 
          </form>
          <form action="/edit" method="get">
            <textarea name="id" style="display:none;"><%=p.id%> </textarea>
            <button type="submit" class="btn btn-primary">Edit</button>            
          </form>
        <% end %>
      </ul>
    </div>
    
</div>
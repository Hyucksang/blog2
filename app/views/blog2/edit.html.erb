<h1> Edit page</h1>

<div class="container">
    <form action="/update" method="get">
      <div class="form-group">
        <label for="inputWriter">WRITER</label>
        <input type="text" class="form-control" aria-describedby="emailHelp" name="writer" value="<%= @edit_post.writer %>">
      </div>
      <div class="form-group">
        <label for="inputTitle">TITLE</label>
        <input type="text" class="form-control" aria-describedby="emailHelp" name="title" value="<%= @edit_post.title %>">
      </div>
      <div class="form-group">
        <label for="inputContent">CONTENT</label>
        <textarea class="form-control" name="content" rows="5"><%= @edit_post.title %></textarea>
      </div>
      <textarea name="id" style="display:none;"><%= @edit_post.id%> </textarea>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    
</div>